#!/bin/bash
./qtum-install
FILE="/etc/systemd/system/qtum-ui.service"
cd ~
rm -rf qtum-ui
sudo apt-get update
sudo apt-get install -y python3-pip libv4l-dev libopenjp2-7 libopenjp2-7-dev libtiff5
mkdir ~/qtum-ui
echo "Downloading Qtum-Ui..........."
wget https://github.com/rpiwalletui/qtum-ui/releases/download/0.3.0-beta/qtum-ui-0.3.0-beta.tar.gz
echo "Installing........."
tar --strip 1 -C ~/qtum-ui -xf ~/qtum-ui-0.3.0-beta.tar.gz
rm qtum-ui-0.3.0-beta.tar.gz
cd  ~/qtum-ui
pip3 install --upgrade -r requirements.txt
echo "The UI is now starting."
echo "to stop the UI type sudo systemctl stop qtum-ui.service"
if [ ! -f "$FILE" ]; then
  sudo wget https://www.dropbox.com/s/1o2s256pwaol1cq/qtum-ui.service -P /etc/systemd/system/
  sudo systemctl daemon-reload
  sudo systemctl enable qtum-ui.service
  sudo systemctl start qtum-ui.service
else
  sudo systemctl restart qtum-ui.service
fi
